{
  "version": 2,
  "builds": [
    {
      "src": "source/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/images/(.*)",
      "dest": "/public/images/$1"
    },
    {
      "src": "/css/(.*)",
      "dest": "/public/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/public/js/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/public/images/email.png"
    },
    {
      "src": "/(.*)",
      "dest": "/source/app.js"
    }
  ]
} 