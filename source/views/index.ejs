                fetchButton.style.cursor = 'not-allowed';
            }
            if (generateChartButton) {
                generateChartButton.disabled = true;
                generateChartButton.style.backgroundColor = 'grey';
                generateChartButton.style.cursor = 'not-allowed';
            }
        }
